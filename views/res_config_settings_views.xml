<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.google.sheets</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Google Sheets Extractor" string="Google Sheets Extractor" data-key="sale_order_prompt_extractor" name="google_sheets_extractor_setting">
                    <h2>Google Sheets Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="google_sheet_url"/>
                                <div class="text-muted">
                                    URL of the Google Sheet to write data to.
                                </div>
                                <div class="content-group">
                                    <field name="google_sheet_url" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="google_sheet_worksheet_name"/>
                                <div class="text-muted">
                                    Default worksheet name (used if company mapping fails).
                                </div>
                                <div class="content-group">
                                    <field name="google_sheet_worksheet_name" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="company_sheet_mapping"/>
                                <div class="text-muted">
                                    JSON mapping of company names to worksheet names for orders. Format: {"Company Name": "Worksheet Name"}. 
                                    Example: {"GLOBAL HIRT SUMINISTROS Y SERVICIOS DE LA INDUSTRIA": "PED G", "FORMAS CERAMICAS": "PED F"}
                                </div>
                                <div class="content-group">
                                    <field name="company_sheet_mapping" class="oe_inline" placeholder='{"Company Name": "Worksheet Name"}'/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="company_invoice_mapping"/>
                                <div class="text-muted">
                                    JSON mapping of company names to worksheet names for invoices. Format: {"Company Name": "Worksheet Name"}. 
                                    Example: {"GLOBAL HIRT SUMINISTROS Y SERVICIOS DE LA INDUSTRIA": "FACT G", "FORMAS CERAMICAS": "FACT F"}
                                </div>
                                <div class="content-group">
                                    <field name="company_invoice_mapping" class="oe_inline" placeholder='{"Company Name": "Worksheet Name"}'/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="google_service_account_key"/>
                                <div class="text-muted">
                                    Paste the content of the JSON key file for the service account.
                                </div>
                                <div class="content-group">
                                    <field name="google_service_account_key" class="oe_inline" placeholder="Paste JSON content here..."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo> 